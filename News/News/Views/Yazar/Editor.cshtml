
@{
	ViewBag.Title = "Editor";
}
@using Entity
@model Authors

<div class="page">
	<div class="page_header clearfix page_margin_top">
		<div class="page_header_left">
			<h1 class="page_title">@Model.Name</h1>
		</div>
		<div class="page_header_right">
			<ul class="bread_crumb">
				<li>
					<a title="Home" href="home.html">
						Home
					</a>
				</li>
				<li class="separator icon_small_arrow right_gray">
					&nbsp;
				</li>
				<li>
					<a title="Authors" href="authors.html">
						Authors
					</a>
				</li>
				<li class="separator icon_small_arrow right_gray">
					&nbsp;
				</li>
				<li>
					Heather Dale
				</li>
			</ul>
		</div>
	</div>
	<div class="page_layout clearfix">
		<div class="divider_block clearfix">
			<hr class="divider first">
			<hr class="divider subheader_arrow">
			<hr class="divider last">
		</div>
		<div class="row page_margin_top">
			<div class="column column_2_3">
				<div class="row">
					<ul class="authors_list rating">
						<li class="author clearfix">
							<div class="avatar_block">
								<a href="images/samples/Team_330x242/image_01.jpg" class="prettyPhoto" title="Debora Hilton">
									<img src='/Content/images/samples/Team_330x242/@Html.Raw(Model.Image+".jpg")' alt='img'>
								</a>
								<div class="details clearfix">
									<ul class="columns">
										<li class="column">
											<span class="number animated_element" data-value="34"></span>
											<h5>Articles</h5>
										</li>
										<li class="column">
											<span class="number animated_element" data-value="@Model.Views"></span>
											<h5>Views</h5>
										</li>
									</ul>
								</div>
							</div>
							<div class="content">
								<ul class="social_icons clearfix">
									<li>
										<a target="_blank" title="" href="http://facebook.com/QuanticaLabs" class="social_icon facebook">
											&nbsp;
										</a>
									</li>
									<li>
										<a target="_blank" title="" href="https://twitter.com/QuanticaLabs" class="social_icon twitter">
											&nbsp;
										</a>
									</li>
									<li>
										<a title="" href="#" class="social_icon skype">
											&nbsp;
										</a>
									</li>
								</ul>
								<h6>EDITOR</h6>
								<h2>@Model.Name</h2>
								<p>@Model.About</p>
								<blockquote class="simple">
									The people who are crazy enough to think they can change the world are the ones who do.
									<span class="author">&#8212;&nbsp;&nbsp;Steve Jobs</span>
								</blockquote>
							</div>
						</li>
					</ul>
					<h4 class="box_header page_margin_top_section">Posts By Deborah Hilton (34)</h4>
					<div class="row">

						<ul class="blog  row">
							@foreach (var item in ViewBag.articles)
							{
								<li class="post" style="float:left; width:47%; clear:none; vertical-align:top; margin:0 0 0 20px;">
									<a href="post.html" title="Nuclear Fusion Closer to Becoming a Reality">
										<img src='/Content/images/samples/330x242/image_01.jpg' alt='img'>
									</a>
									<h2 class="with_number">
										<a href="post.html" title="Nuclear Fusion Closer to Becoming a Reality">@item.Head</a>
										<a class="comments_number" href="post.html#comments_list" title="2 comments">2<span class="arrow_comments"></span></a>
									</h2>
									<ul class="post_details">
										<li class="category"><a href="category_world.html" title="WORLD">WORLD</a></li>
										<li class="date">
											10:11 PM, Feb 02
										</li>
									</ul>
									<p>@item.Paragraph.Substring(0,40)</p>
									<a class="read_more" href="post.html" title="Read more"><span class="arrow"></span><span>READ MORE</span></a>
								</li>
								
							}


						</ul>


					</div>
					<ul class="pagination clearfix page_margin_top_section">
						<li class="left">
							<a href="#" title="">&nbsp;</a>
						</li>
						<li class="selected">
							<a href="#" title="">
								1
							</a>
						</li>
						<li>
							<a href="#" title="">
								2
							</a>
						</li>
						<li>
							<a href="#" title="">
								3
							</a>
						</li>
						<li class="right">
							<a href="#" title="">&nbsp;</a>
						</li>
					</ul>
				</div>
			</div>
		@Html.Action("_MostRead","Yazar")
		</div>
	</div>
</div>

